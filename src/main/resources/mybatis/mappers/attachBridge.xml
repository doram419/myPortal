<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="attachBridge">
	<!-- attachBridge 객체 생성 -->
	<insert id="insert" parameterType="Map">
		INSERT INTO boardBridge(postNo, attachNo)
		VALUES(#{postNo}, #{attachNo})
	</insert>
	
	<!-- attachBridge 삭제
		글 삭제, 혹은 첨부 파일 변경시 삭제 -->
	<delete id="delete" parameterType="Long">
		DELETE FROM boardBridge WHERE postNo = #{value}
	</delete>
</mapper>